
/dts-v1/;

/ {
	vmm {
		#address-cells = <1>;
		#size-cells = <0>;
		arm7a_highvec_enable = <0>;
		arm7a_ttbl_pool_size = <0x20000>;
		arm7a_l2tbl_per_vcpu = <4>;
		arm7a_tlbent_per_vcpu = <64>;
		max_vcpu_count = <4>;
		max_guest_count = <2>;
		tick_delay_usecs = <100>;
		vcpu_timer_mhz = <10>;
		hypercore_tick_count = <50>;
	};

	host {
		#address-cells = <2>;
		#size-cells = <1>;
		model = "realview-pb-a8";
		device_type = "host";
		host_irq_count = <96>;
		virt-addr-start = <0x80000000>;
		virt-addr-size = <0x80000>;
		
		cpus {
			#address-cells = <1>;
			#size-cells = <0>;
			cpu_freq_mhz = <100>;

			cpu0 {
				device_type = "cpu";
				model = "Cortex-A8";
			};
		};

		nbridge {
			#address-cells = <1>;
			#size-cells = <0>;
		
			sbridge {
				#address-cells = <1>;
				#size-cells = <0>;
		
				uart0 {
			      		device_type = "serial";
			      		compatible = "pl011";
			      		reg = <0x10009000 0x1000>;
			      		baudrate = <115200>;
				};
			};
		};
	};

	guests {
		#address-cells = <1>;
		#size-cells = <0>;

		guest0 {
			#address-cells = <1>;
			#size-cells = <0>;
			model = "versatile,pb-a8";
			device_type = "guest";

			vcpus {
				#address-cells = <1>;
				#size-cells = <0>;

				vcpu0 {
					device_type = "vcpu";
					model = "ARMv7a,cortex-a8";
					tick_count = <200>;
					start_pc = <0x00100000>;
				};
			};
			
			addrspace {
				#address-cells = <1>;
				#size-cells = <0>;

				mem {
					manifest_type = "real";
					address_type = "memory";
					guest_physical_addr = <0x00100000>;
					host_physical_addr = <0x00100000>;
					physical_size = <0x00100000>;
					device_type = "memory";
				};

				sysctl {
					manifest_type = "virtual";
					address_type = "memory";
					guest_physical_addr = <0x10000000>;
					host_physical_addr = <0x00000000>;
					physical_size = <0x1000>;
					device_type = "sys";
					compatible = "realview,pb-a8";
				};

				sysctrl0 {
					manifest_type = "virtual";
					address_type = "memory";
					guest_physical_addr = <0x10001000>;
					host_physical_addr = <0x00000000>;
					physical_size = <0x1000>;
					device_type = "sys";
					compatible = "primecell,sp810";
				};

				uart {
					manifest_type = "virtual";
					address_type = "memory";
					guest_physical_addr = <0x10009000>;
					host_physical_addr = <0x00000000>;
					physical_size = <0x1000>;
					device_type = "serial";
				};

				sysctrl1 {
					manifest_type = "virtual";
					address_type = "memory";
					guest_physical_addr = <0x1001A000>;
					host_physical_addr = <0x00000000>;
					physical_size = <0x1000>;
					device_type = "sys";
					compatible = "primecell,sp810";
				};

			};
		};

	};
};
